---
import { CONSTS } from "@/consts.ts";
import BaseLayout, { type BaseLayoutProps } from '@/layouts/BaseLayout.astro'

import * as m from "@/paraglide/messages.js";

import Button from "@/components/Button.tsx";

interface Props extends BaseLayoutProps {

}

const { title } = Astro.props;
---

<BaseLayout title={title}>
  <div class="wrapper">
    <div class="pusher">
      <header class="header">
        <div class="container">
          <div class="content">
            <div class="block">
              <p>{m.metaTitle()}</p>
            </div>
            <div class="block">
              <p>Home</p>
              <p>Features</p>
            </div>
            <div class="block">
              <Button>
                <div class="button-content">
                  <p>Sign In</p>
                  <img src="/icons/right-arrow.svg" />
                </div>
              </Button>
            </div>
          </div>
          <hr/>
        </div>
      </header>
      <div class="container">
        <slot/>
      </div>
    </div>
    <div class="sub-wrapper">
      <footer class="footer">
        <div class="container">
          <hr />
          <div class="content">
            <div class="footer-left">
              <img src="/icons/fcs.svg" alt="fcs" class="logo" />
              <div class="footer-left-links">
                <p>MIT License {new Date().getFullYear()}</p>
                <a href={CONSTS.CONTRIBUTORS_LINK}>
                  <p>SmartApiForge Contributors</p>
                </a>
              </div>
            </div>
            <div class="content">
              <a href={CONSTS.GITHUB_ORG_LINK}>
                <img src="/icons/github-mark.svg" alt="github" class="logo" />
              </a>
            </div>
          </div>
        </div>
      </footer>
    </div>
  </div>
</BaseLayout>

<style>
  hr {
    border-color: black;
    margin: 0 0;
  }

  .header {
    margin-top: 1rem;
  }

  .footer {
    margin: 1rem 0;
    font-size: 0.7rem;
  }

  .wrapper {
    width: 100%;
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
  }

  .pusher {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .sub-wrapper {
    display: flex;
    flex-direction: column;
  }

  .footer-left {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 0 2%;
    width: 100%;
    margin: 0 auto;
  }

  .footer-left-links {
    display: flex;
    flex-direction: column;
  }

  .content {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 1rem;
    align-items: center;
  }

  .button-content {
    display: flex;
    gap: 0.1rem;
    align-items: center;
    justify-content: center;
  }

  .button-content * {
    max-height: 1rem;
  }

  .block {
    display: flex;
    flex-direction: row;
    gap: 0.5rem;
  }

  .logo {
    height: 2rem;
  }

  @media screen and (min-width: 960px) {
    .container {
      max-width: 960px;
    }
  }

  @media screen and (min-width: 1400px) {
    .container {
      max-width: 1280px;
    }
  }

  @media screen and (min-width: 1600px) {
    .container {
      max-width: 1440px;
    }
  }

  @media screen and (min-width: 2560px) {
    .container:  {
      max-width: 1920px;
    }
  }
</style>
