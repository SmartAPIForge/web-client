---
import FilledLayout from "@/layouts/FilledLayout.astro";
import Button from "@/components/react/Button/Button";
---

<div class="cut-effect appear-effect"></div>

<FilledLayout title="SmartApiForge">
  <main>
    <div class="relative">
      <h1 class="main-text appear-effect">
        Low-code platform for API generation
      </h1>
      <div class="card card-1"></div>
      <div class="card card-2"></div>
    </div>
    <div class="appear-effect">
      <img src="/images/api.svg" alt="api-image" class="image" />
    </div>
  </main>
  <div class="appear-effect button-box">
    <a href="/generator">
      <Button
        style={{
          padding: "0.5rem 1rem",
          borderRadius: "0.2rem",
        }}
      >
        <div class="button-content">
          <h1>Start generation</h1>
        </div>
      </Button>
    </a>
  </div>
</FilledLayout>

<style>
  main {
    margin: 8dvh auto 0;
    display: grid;
    grid-template-columns: 0.6fr 0.4fr;
    gap: 0.5rem;
    align-items: center;
    justify-content: center;
  }

  .button-box {
    display: flex;
    justify-content: center;
  }

  .button-content {
    display: flex;
    gap: 0.1rem;
    align-items: center;
    justify-content: center;
  }

  .image {
    height: clamp(20rem, 30vw, 30rem);
    /* transform: translateX(20%); */
  }

  .relative {
    position: relative;
  }

  .card {
    position: absolute;
    background: linear-gradient(
      45deg,
      rgba(224, 76, 90, 0.5) 0%,
      rgba(206, 103, 184, 0.5) 100%
    );
    border-radius: 10px;
    z-index: -1;
    opacity: 0;
    animation: cardAppearEffect 1s forwards;
    backdrop-filter: blur(10px);
  }

  .card-1 {
    left: -20%;
    top: 20%;
    width: 40dvw;
    height: 30dvh;
    transform: rotate(-30deg);
    animation-delay: 0.5s;
    clip-path: polygon(0% 0%, 80% 20%, 100% 80%, 0% 100%);
  }

  .card-2 {
    left: -20%;
    top: 10%;
    width: 60dvw;
    height: 35dvh;
    transform: rotate(20deg);
    animation-delay: 0.75s;
    clip-path: polygon(10% 30%, 100% 0%, 100% 100%, 0% 80%);
  }

  .main-text {
    font-family: "HSE-slab";
    font-size: 4rem;
    font-weight: 300;
    line-height: 1;
    position: relative;
  }

  .cut-effect {
    background: rgb(224, 76, 90);
    background: linear-gradient(
      45deg,
      rgba(224, 76, 90, 1) 0%,
      rgba(206, 103, 184, 1) 57%,
      rgba(233, 133, 128, 1) 100%
    );
    background-size: cover;
    height: 60dvh;
    clip-path: polygon(0 0, 100% 0, 100% 50%, 0 100%);
    position: absolute;
    left: 0;
    top: 0;
    width: 100dvw;
    z-index: -1;
  }

  .appear-effect {
    opacity: 0;
    transform: translateY(-100%);
    animation: slideIn 1s forwards;
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateY(var(--data-scroll));
    }
  }

  @keyframes cardAppearEffect {
    to {
      opacity: 1;
    }
  }
</style>
